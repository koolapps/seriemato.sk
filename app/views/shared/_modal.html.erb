<% title = '&nbsp;'.html_safe if title.nil? %>
<% data_backdrop = 'true' if data_backdrop.nil? %>

<div class="modal fade" id="modal" data-backdrop="<%= data_backdrop %>" data-keyboard="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
        <%= render('form') %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
