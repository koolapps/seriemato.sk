<%= div_for issue, class: 'col-sm-3' do %>
  <div class="thumbnail">
    <div class="text-center">
      <%= link_to image_tag(issue.picture.url(:small)), issue_path(issue) %>
    </div>
    <div class="caption">
      <h3><%= link_to issue.name, issue_path(issue) %></h3>
      <p><%= issue.short_description %>
    </div>
  </div>
<% end %>
<% if (issue_counter+1) % 4 == 0 %>
  </div><div class="row">
<% end %>
