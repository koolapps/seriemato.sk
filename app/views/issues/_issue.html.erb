<%= div_for issue, class: 'col-sm-3' do %>
  <div class="thumbnail">
    <img src="holder.js?150x120" />
    <div class="caption">
      <h3><%= link_to issue.name, issue_path(issue) %></h3>
      <p><%= issue.short_description %>
    </div>
  </div>
<% end %>
