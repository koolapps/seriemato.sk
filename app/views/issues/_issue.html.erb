<%= div_for issue, class: 'col-sm-3' do %>
  <div class="thumbnail">
    <div class="text-center">
      <%= link_to image_tag(issue.picture.url(:small)), issue_path(issue) %>
    </div>
    <div class="caption">
      <h3><%= link_to issue.name, issue_path(issue) %></h3>
      <p><%= issue.short_description %>
    </div>
    <p>
      <span class="smt-count">Serie to: <%= issue.smt_count %> / <%= issue.smt_limit %></span>
      <%= progress_bar(issue.smt_progress_in_percent, 'smt progress-bar-danger') %>
    </p>
    <p>
      <span class="solvers-count">Chce to riešiť: <%= issue.solvers_count %> / <%= issue.solvers_limit %></span>
      <%= progress_bar(issue.solvers_progress_in_percent, 'solvers progress-bar-success') %>
    </p>
  </div>
<% end %>
<% if issue_counter == 3 %>
  </div><div class="row">
<% end %>
