<!DOCTYPE html>
<html>
  <head>
    <title>Seriemato</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container">
      <%= render 'shared/header_menu' %>

      <%= render 'shared/flash' %>

      <div class="row admin-dashboard">
        <div class="col-sm-3 sidebar">
          <h3>Admin Menu</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to 'Issues', admin_issues_path %>
            <li><%= link_to 'New Issue', new_admin_issue_path %></li>
            <li><%= link_to 'Categories', admin_categories_path %></li>
            <li><%= link_to 'New Category', new_admin_category_path %></li>
          </ul>
        </div>
        <div class="col-sm-9">
          <%= yield %>
        </div>
      </div>

    </div> <!-- end of .container -->

  </body>
</html>
