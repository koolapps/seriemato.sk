<!DOCTYPE html>
<html>
  <%= render 'head_tag' %>
  <body>

    <%= render 'header_menu' %>

    <%= render 'flash' %>

    <div class="explanation text-center">
      <div class="container">
        <%= image_tag 'explanation.png' %>
        <%= link_to 'bližšie vysvetlenie', page_path('about'), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

    <%= yield %>


    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <h4>Čo ľudí trápi</h4>
            <div class="row">
              <%= render collection: Category.all, partial: 'footer_category' %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="row">
              <div class="col-sm-4">
                <h4>Sprav niečo</h4>
                <ul class="list-unstyled">
                  <li><a href="#">Pridaj problém</a></li>
                  <li><a href="#">Zapíš sa ako nezáväzný riešiteľ</a></li>
                </ul>
              </div>
              <div class="col-sm-4">
                <h4>O tomto všetkom</h4>
                <ul class="list-unstyled">
                  <li><a href="#">O čom je seriemato?</a></li>
                  <li><a href="#">Pravidlá používania stránky</a></li>
                  <li><a href="#">Náš tím</a></li>
                  <li><a href="#">Štatistiky</a></li>
                </ul>
              </div>
              <div class="col-sm-4">
                <h4>Ostante s nami v</h4>
                <ul class="list-unstyled">
                  <li><a href="#">Blog</a></li>
                  <li><a href="#">Newsletter</a></li>
                  <li><a href="#">Facebook</a></li>
                  <li><a href="#">Twitter</a></li>
                  <li><a href="#">Mail</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </body>
</html>
