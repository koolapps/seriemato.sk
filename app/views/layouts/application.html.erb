<!DOCTYPE html>
<html>
  <%= render 'head_tag' %>
  <body>

    <%= render 'header_menu' %>

    <div class="explanation text-center">
      <div class="container">
        <%= image_tag 'explanation.png' %>
        <%= link_to 'bližšie vysvetlenie', page_path('about'), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

    <%= render 'flash' %>

    <%= yield %>


    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <h4>Čo ľudí trápi</h4>
            <div class="row">
              <%= render collection: Category.all, partial: 'footer_category' %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="row">
              <div class="col-sm-4">
                <h4>Sprav niečo</h4>
                <ul class="list-unstyled">
                  <li><%= link_to 'Pridaj problém', page_path('not-created') %></li>
                  <li><%= link_to 'Zapíš sa ako nezáväzný riešiteľ', page_path('not-created') %></li>
                </ul>
              </div>
              <div class="col-sm-4">
                <h4>O tomto všetkom</h4>
                <ul class="list-unstyled">
                  <li><%= link_to 'O čom je seriemato?', page_path('about') %></li>
                  <li><%= link_to 'Pravidlá používania stránky', page_path('not-created') %></li>
                  <li><%= link_to 'Náš tím', page_path('not-created') %></li>
                  <li><%= link_to 'Štatistiky', page_path('not-created') %></li>
                </ul>
              </div>
              <div class="col-sm-4">
                <h4>Ostante s nami v</h4>
                <ul class="list-unstyled">
                  <li><%= link_to 'Blog', page_path('not-created') %></li>
                  <li><%= link_to 'Newsletter', page_path('not-created') %></li>
                  <li><a href="#">Facebook</a></li>
                  <li><a href="#">Twitter</a></li>
                  <li><a href="#">Mail</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
    <% if Rails.env.production? %>
      <script src="https://trackduck.azurewebsites.net/assets/6964f2fa696c4c2d909b3972feda245a"></script>
    <% end %>
  </body>
</html>
