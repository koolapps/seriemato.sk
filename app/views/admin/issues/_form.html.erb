<%= form_for @issue, url: url do |form| %>
  <% if @issue.errors.any? %>
    <div class="alert alert-error alert-block">
      Some errors occured:
      <ul>
        <% @issue.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :short_description %>
  <%= form.text_area :short_description %>

  <%= form.label :SMT_limit, 'SMT limit' %>
  <%= form.text_field :SMT_limit %>

  <%= form.label :solvers_limit %>
  <%= form.text_field :solvers_limit %>

  <%= form.label :long_description %>
  <%= form.text_area :long_description %>

  <%= form.submit %>
<% end %>
